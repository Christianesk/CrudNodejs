<div class="container">
    <div class="row">
            <!--Form-->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" placeholder="Insert a Title" class="form-control">
                            </div>
                            <div class="form-group">
                                    <textarea name="description"  cols="80" class="form-control" placeholder="Insert a Description"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">
                                Add
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!--List-->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <th>NÂ°</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Accions</th>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < tasks.length ; i++ ) { %>
                           <tr>
                               <td><%= i + 1%></td>
                               <td><%= tasks[i].title %></td>
                               <td><%= tasks[i].description%></td>
                               <td>
                                   <a class="btn <%= tasks[i].status? 'btn-success': 'btn-dark'%> " href="/done/<%= tasks[i]._id %>">Done</a>
                                   <a class="btn btn-danger" href="/delete/<%= tasks[i]._id %>">Delete</a>
                                   <a class="btn btn-info" href="/edit/<%= tasks[i]._id %>">Edit</a>
                               </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
    </div>
</div>

<%include partials/_footer%>